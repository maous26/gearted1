{
  "name": "gearted-api",
  "version": "1.0.0",
  "description": "API backend pour Gearted - Marketplace d'échange d'équipements Airsoft",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "start:prod": "npm run build && node dist/server.js",
    "dev": "NODE_ENV=development nodemon --exec ts-node src/server.ts",
    "dev:staging": "NODE_ENV=staging npm run build && npm start",
    "dev:safe": "./start-server.sh",
    "check": "./check-dev-env.sh",
    "kill-port": "./kill-port.sh",
    "lint": "eslint . --ext .ts",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:seed": "ts-node scripts/seed-database.ts",
    "db:reset": "ts-node scripts/reset-database.ts",
    "deploy:staging": "echo 'Deploying to staging...' && git push origin staging",
    "deploy:production": "echo 'Deploying to production...' && git push origin main"
  },
  "keywords": [
    "airsoft",
    "marketplace",
    "api"
  ],
  "author": "Gearted Team",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.821.0",
    "@aws-sdk/lib-storage": "^3.821.0",
    "@aws-sdk/s3-request-presigner": "^3.821.0",
    "@mongodb-js/zstd": "^2.0.1",
    "@types/nodemailer": "^6.4.17",
    "archiver": "^5.3.1",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.18.1",
    "firebase-admin": "^13.4.0",
    "google-auth-library": "^9.15.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.13.8",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "sharp": "^0.34.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.18.1",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.12",
    "@types/node": "^16.10.2",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.10.9",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^2.0.13",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
